@model AppUserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<form asp-action="Login" method="post" class="mt-5 w-50 mx-auto p-4 shadow">

    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

    <div class="form-group">
        <label asp-for="Email">Email :</label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Parola :</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label class="form-check-label" asp-for="RememberMe">Beni Hatırla</label>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>

    <a asp-action="SignUp" class="btn btn-warning btn-sm">Kayıt Ol</a>
    <input type="submit" class="btn btn-info btn-sm" value="Giriş Yap" />

</form>


